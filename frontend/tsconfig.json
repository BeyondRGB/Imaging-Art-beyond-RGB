{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "isolatedModules": true,
    "baseUrl": "./",
    "allowJs": true,
    "outDir": "public",
    "paths": {
      "@root/*": [
        "src/renderer/*"
      ],
      "@components/*": [
        "src/renderer/components/*"
      ],
      "@pages/*": [
        "src/renderer/pages/*"
      ],
      "@util/*": [
        "src/renderer/util/*"
      ],
      "@assets/*": [
        "src/renderer/assets/*"
      ]
    }
  },
  "include": [
    "./src/renderer/**/*",
    "vite.config.ts",
    "global.d.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "./__sapper__/*",
    "./public/*",
  ],
}